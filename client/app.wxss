/**app.wxss**/
@import "./weui.wxss";

page {
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.page__hd {
    padding: 40px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 40px;
    text-align: center;
}

.page__ft_text_warning {
    padding-top: 5px;
    font-size: 12px;
    color: #888888;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.disable {
    color: #888;
}